{
  "name": "@colmena/colmena",
  "version": "0.0.0",
  "description": "Colmena",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Bram Borggreve <bram@colmena.io> (https://github.com/beeman) (https://twitter.com/beeman_nl)",
  "url": "https://github.com/colmena/colmena",
  "homepage": "https://github.com/colmena/colmena",
  "repository": {
    "type": "git",
    "url": "https://github.com/colmena/colmena"
  },
  "bugs": {
    "url": "https://github.com/colmena/colmena/issues"
  },
  "keywords": ["colmena", "cms", "mobile", "backend", "loopback", "angular", "admin"],
  "scripts": {
    "app": "npm run app:start",
    "app:logs": "docker-compose -f docker-compose.app.yml logs -f",
    "app:start": "docker-compose -f docker-compose.app.yml up -d",
    "app:stop": "docker-compose -f docker-compose.app.yml stop",
    "app:rm": "npm run servers:stop && docker-compose rm -f",
    "clean": "npx rimraf node_modules && npx lerna clean --yes",
    "clean:api": "npx rimraf ./apps/api/client/dist",
    "postclean": "npm run clean:api",
    "console": "cd apps/api && loopback-console server/server.js",
    "contributors:add": "npx all-contributors add",
    "contributors:generate": "npx all-contributors generate",
    "build": "npm run build:admin",
    "build:admin": "cd apps/admin && npm run build",
    "dev": "concurrently --kill-others 'npm run dev:api' 'npm run dev:admin'",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:api": "nodemon apps/api/server/server.ts",
    "docker:build": "docker build -t colmena/colmena:latest .",
    "docker:run": "docker run -it -p 3000:3000 -e INITDB=1 --name colmena --rm colmena/colmena:latest",
    "initdb": "node apps/api/bin/initdb",
    "now": "now deploy --docker && now alias",
    "servers": "npm run servers:start",
    "servers:logs": "docker-compose -f docker-compose.servers.yml logs -f",
    "servers:start": "docker-compose -f docker-compose.servers.yml up -d",
    "servers:stop": "docker-compose -f docker-compose.servers.yml stop",
    "servers:rm": "npm run servers:stop && docker-compose rm -f",
    "lint": "prettier --write",
    "sdk": "npm run sdk:api",
    "sdk:api":
      "cross-env NODE_ENV=codegen ts-node  --fast --cache-directory ./.ts-cache node_modules/.bin/lb-sdk --wipe enabled apps/api/server/server.ts packages/admin-lb-sdk/src",
    "start": "cd apps/api && npm start",
    "test": "true",
    "precommit": "lint-staged",
    "postinstall": "node ./postinstall",
    "update": "ncu -a && npm update && lerna exec 'ncu -a && npm update'"
  },
  "dependencies": {
    "concurrently": "3.5.1",
    "debug": "3.0.1",
    "ngx-quill": "1.4.0",
    "parent-require": "1.0.0",
    "path": "0.12.7",
    "ts-node": "3.3.0"
  },
  "devDependencies": {
    "@angular/animations": "4.3.6",
    "@angular/cli": "1.3.2",
    "@angular/common": "4.3.6",
    "@angular/compiler": "4.3.6",
    "@angular/compiler-cli": "4.3.6",
    "@angular/core": "4.3.6",
    "@angular/forms": "4.3.6",
    "@angular/http": "4.3.6",
    "@angular/platform-browser": "4.3.6",
    "@angular/platform-browser-dynamic": "4.3.6",
    "@angular/router": "4.3.6",
    "@colmena/api-explorer-style": "0.1.0",
    "@colmena/api-helpers": "^0.2.0",
    "@colmena/logger": "0.1.0",
    "@colmena/module-api-content": "0.1.0",
    "@colmena/module-api-core": "^0.2.0",
    "@colmena/module-api-dev": "^0.2.0",
    "@colmena/module-api-storage": "^0.2.0",
    "@colmena/module-api-system": "^0.2.0",
    "@mean-expert/loopback-sdk-builder": "2.1.0-rc.13.5",
    "@ngrx/core": "1.2.0",
    "@ngrx/effects": "2.0.4",
    "@ngrx/router-store": "1.2.6",
    "@ngrx/store": "2.2.3",
    "@ngrx/store-devtools": "3.2.4",
    "@ngx-plus/ngx-alerts": "0.2.0",
    "bluebird": "3.5.0",
    "codelyzer": "3.1.2",
    "compression": "1.7.0",
    "config": "1.26.2",
    "core-js": "2.5.0",
    "coreui-styles": "latest",
    "cors": "2.8.4",
    "cross-env": "5.0.5",
    "faker": "4.1.0",
    "font-awesome": "4.7.0",
    "helmet": "3.8.1",
    "husky": "0.14.3",
    "js-yaml": "3.9.1",
    "lerna": "2.1.0",
    "lint-staged": "4.3.0",
    "lodash": "4.17.4",
    "loopback": "3.11.1",
    "loopback-boot": "2.26.1",
    "loopback-component-explorer": "4.2.0",
    "loopback-component-meta": "1.1.2",
    "loopback-component-model-extender": "github:colmena/loopback-component-model-extender#component-package",
    "loopback-component-ping": "2.0.2",
    "loopback-component-storage": "3.2.0",
    "loopback-component-templates": "1.2.1",
    "loopback-connector-mongodb": "3.2.1",
    "loopback-console": "1.1.0",
    "loopback-datasource-juggler": "3.11.0",
    "loopback-ds-computed-mixin": "2.0.3",
    "loopback-ds-paginate-mixin": "1.1.1",
    "loopback-ds-readonly-mixin": "2.0.4",
    "loopback-ds-timestamp-mixin": "3.4.1",
    "ng-formly": "1.0.0-rc.10",
    "ng2-file-upload": "^1.2.1",
    "ngrx-store-freeze": "0.1.9",
    "ngrx-store-logger": "0.2.0",
    "ngx-bootstrap": "1.9.1",
    "nodemon": "1.11.0",
    "nsp": "2.7.0",
    "options": "0.0.6",
    "prettier": "1.6.0",
    "request": "2.81.0",
    "reselect": "3.0.1",
    "rimraf": "2.6.1",
    "rxjs": "5.4.3",
    "serve-favicon": "2.4.3",
    "simple-line-icons": "2.4.1",
    "strong-error-handler": "2.2.0",
    "tslint": "5.7.0",
    "typescript": "2.4.2",
    "zone.js": "0.8.17"
  },
  "now": {
    "name": "colmena",
    "alias": [
      "colmena",
      "colmena-cms",
      "colmena-mobile",
      "colmena-admin",
      "colmena-site",
      "colmena-app",
      "colmena-api",
      "colmena-demo"
    ],
    "env": {
      "MIGRATEDB": true,
      "INITDB": true,
      "API_HOST": "0.0.0.0",
      "API_BASE_URL": "https://colmena.now.sh"
    }
  },
  "lint-staged": {
    "*.{css,js,json,ts}": ["npm run lint", "git add"]
  }
}
