{
  "name": "SystemRoleMapping",
  "base": "RoleMapping",
  "description": "Map principals to roles",
  "options": {
    "forceId": false,
    "strictObjectIDCoercion": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true
    },
    "principalType": {
      "type": "string",
      "description":
        "The principal type, such as USER, APPLICATION, ROLE, or user model name in case of multiple user models"
    },
    "principalId": {
      "type": "string",
      "index": true
    }
  },
  "relations": {
    "systemRole": {
      "type": "belongsTo",
      "model": "SystemRole",
      "foreignKey": "roleId"
    }
  }
}
